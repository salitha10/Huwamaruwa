<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".buyerRentalRequestManage.SendingOffer">

    <include layout="@layout/toolbar"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardElevation="20sp"
        app:cardCornerRadius="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:id="@+id/sendingOffer_productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:textColor="@color/theme_green"
                android:layout_marginBottom="20sp"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/sendingOffer_buyerRequestId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Id :"
                android:textColor="@color/theme_green"
                android:textSize="17sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category :"
                    android:textColor="@color/theme_green"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/sendingOffer_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:text="text"
                    android:textColor="@color/theme_green"
                    android:textSize="17sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quantity :"
                    android:textColor="@color/theme_green"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/sendingOffer_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:text="text"
                    android:textColor="@color/theme_green"
                    android:textSize="17sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Required Date :"
                    android:textColor="@color/theme_green"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/sendingOffer_requiredDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:text="text"
                    android:textColor="@color/theme_green"
                    android:textSize="17sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50sp"
                    android:text="Budget :"
                    android:textColor="@color/theme_green"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/sendingOffer_budget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:text="text "
                    android:textColor="@color/theme_green"
                    android:textSize="17sp"/>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="20sp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Offer"
                android:textSize="20sp"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/sendingForm_photo"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/aaa"
                    />
                <Button
                    android:id="@+id/btnSendingForm_selectPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="40dp"
                    android:text="Add Photo"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product name"
                android:layout_marginTop="20sp"
                android:textSize="17sp"/>
            <EditText
                android:id="@+id/sendingForm_productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:layout_marginTop="20sp"
                android:textSize="17sp"/>
            <EditText
                android:id="@+id/sendingForm_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rental"
                android:layout_marginTop="20sp"
                android:textSize="17sp"/>
            <EditText
                android:id="@+id/sendingForm_rental"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/btnSendingForm_sendOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sendOffer"
                android:text="send Offer" />
            <Button
                android:id="@+id/btnSendingForm_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                />

        </LinearLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>