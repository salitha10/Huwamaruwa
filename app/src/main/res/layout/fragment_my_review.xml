<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductReviews.MyReviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Your Review"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/myReview_card_view"
            android:layout_width="329dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <ImageView
                        android:id="@+id/ReviewerImageMyReview"
                        android:layout_width="73dp"
                        android:layout_height="65dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="13dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="243dp"></ImageView>

                    <RatingBar

                        android:id="@+id/myRatingBarMyRating"

                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="83dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/reviewerNameMyReviews"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="95dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginEnd="151dp"
                        android:layout_marginBottom="137dp"
                        android:isIndicator="true"
                        android:max="5"
                        android:theme="@style/RatingBar"/>

                    <TextView
                        android:id="@+id/reviewerNameMyReviews"
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="95dp"
                        android:layout_marginTop="23dp"
                        android:layout_marginEnd="69dp"
                        android:text="Reviewer"
                        android:textSize="15dp"></TextView>

                    <TextView
                        android:id="@+id/myReviewEdit"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="281dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="12dp"
                        android:gravity="center"
                        android:text="Edit"
                        android:textStyle="bold"></TextView>

                    <ImageView
                        android:id="@+id/myReviewDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/myReviewEdit"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="288dp"
                        android:layout_marginTop="29dp"
                        android:layout_marginEnd="17dp"
                        app:srcCompat="@drawable/ic_baseline_delete_24" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/MyReviewComment"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:numStars="5"
                    android:stepSize="0.1"
                    android:text="@string/description"
                    android:textSize="15sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="?android:attr/listDivider" />
    </LinearLayout>
</FrameLayout>