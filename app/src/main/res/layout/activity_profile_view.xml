<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileView"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>


<!--    <ImageView-->
<!--        android:layout_width="250dp"-->
<!--        android:layout_height="250dp"-->
<!--        android:layout_marginLeft="70dp"-->
<!--        android:src="@drawable/aaa" />-->
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ProfPic_circularView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="25dp"
        android:baselineAlignBottom="false"
        android:src="@drawable/aaa" />

    <Button
        android:id="@+id/btnProfile_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:textColor="@color/black"
        android:text="Galery"/>

    <Button
        android:id="@+id/btnProfile_picUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:textColor="@color/black"
        android:text="upload photo"/>

    <!--        android:id="@+id/imageView27"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        tools:srcCompat="@tools:sample/avatars" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="70dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:layout_margin="10dp"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/ProfileView_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:layout_margin="10dp"
                android:textSize="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email : "
                android:layout_margin="10dp"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/ProfileView_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:layout_margin="10dp"
                android:textSize="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pnone No. : "
                android:layout_margin="10dp"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/ProfileView_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:layout_margin="10dp"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address : "
                android:layout_margin="10dp"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/ProfileView_Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:layout_margin="10dp"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type : "
                android:layout_margin="10dp"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/ProfileView_userType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:layout_margin="10dp"
                android:textSize="15dp"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="25sp"
            android:onClick="editProfile"
            android:text="@string/btnEditProfile" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Profile"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:onClick="LogoutMethod"
        android:text="Log out"
        android:textColor="@color/black" />

</LinearLayout>