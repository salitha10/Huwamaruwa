<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".buyerRentalRequestManage.BuyerRentalRequest">


    <include layout="@layout/toolbar"/>




    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note: Please Refrain From making unnecessary requests"
        android:textAlignment="textStart"
        android:layout_margin="15dp"
        android:textColor="@color/theme_green"
        android:textSize="18dp" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblproductName"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/prouctNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Product Name"
            android:inputType="textPersonName"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/productCategoryEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Category"
            android:inputType="textPersonName"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblQuantity"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/productQuantityEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLength="2"
            android:inputType="number"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblRequiredDate"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/requiredDateEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lblBudget"
            android:textSize="18dp"/>

        <EditText
            android:id="@+id/budgetEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Budget"
            android:inputType="textPersonName"
            android:layout_marginBottom="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buyerReqCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblCancel"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="100dp"/>

            <Button
                android:id="@+id/buyerReqsubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="Save"
                android:text="@string/btnSubmit" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>